{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
      "ignore": ["node_modules/**"]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentSize": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "useHookAtTopLevel": "off"        
      },
      "style": {
        "noImplicitBoolean": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }    
  }
}
