{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "jsx": "react-jsx",
    "lib": ["esnext"],
    "module": "nodenext",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/node_modules/**",
    "../../node_modules",
    "**/__tests__/**",
  ],
  "ts-node": {
    "esm": true
  }
}
