{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "lib": ["es2018"],
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "**/dist/**",
    "**/__tests__/**",
    "**/node_modules/**"
  ]
}