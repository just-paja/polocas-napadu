{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@polocas-napadu/ui": ["./polocas-napadu/ui"]
    },
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "polocas-napadu/**/*.ts",
    "polocas-napadu/**/*.tsx"
  ],
  "exclude": [
    "**/dist/**",
    "**/__tests__/**",
    "**/node_modules/**"
  ],
  "references": [
    { "path": "./polocas-napadu/ui" }
  ],
  "ts-node": {
    "esm": true
  }
}
